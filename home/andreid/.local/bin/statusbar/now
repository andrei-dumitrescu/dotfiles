#!/usr/bin/bash

CLOCK=$(date '+%I')

case "$CLOCK" in
	"00") ICON="🕛" ;;
	"01") ICON="🕐" ;;
	"02") ICON="🕑" ;;
	"03") ICON="🕒" ;;
	"04") ICON="🕓" ;;
	"05") ICON="🕔" ;;
	"06") ICON="🕕" ;;
	"07") ICON="🕖" ;;
	"08") ICON="🕗" ;;
	"09") ICON="🕘" ;;
	"10") ICON="🕙" ;;
	"11") ICON="🕚" ;;
	"12") ICON="🕛" ;;
esac

case $BLOCK_BUTTON in
	1) 
    notify " Calendar" "$(cal --color=always -n 2 | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" 
  ;;
esac

printf '%s %s\n' "$ICON" "$(date '+ %a %d %T ')" 
