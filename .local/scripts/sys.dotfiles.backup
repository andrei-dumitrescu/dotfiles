#!/bin/sh

# Exit script if any statement returns a non-true return value
set -e

# Exit script if trying to use an uninitialised variable
set -u

backupPath="$HOME/Work/dotfiles"

rm -rf "$backupPath/.config"
rm -rf "$backupPath/.local"

mkdir -p "$backupPath/.local/share"
mkdir -p "$backupPath/.config/nvim"
mkdir -p "$backupPath/home"

# Custom scripts
cp -r "$HOME/.local/scripts" "$backupPath/.local"
cp -r "$HOME/.local/statusbar" "$backupPath/.local"
cp -r "$HOME/.local/snippets" "$backupPath/.local"

# Share
cp -r "$HOME/.local/share/applications" "$backupPath/.local/share"
cp "$HOME/.config/mimeapps.list" "$backupPath/.config"
cp -r "$HOME/.local/share/fonts" "$backupPath/.local/share"

# Vim
cp "$HOME"/.config/nvim/*.vim "$backupPath/.config/nvim"
cp "$HOME"/.config/nvim/*.lua "$backupPath/.config/nvim"
cp -r "$HOME/.config/nvim/lua" "$backupPath/.config/nvim"
cp -r "$HOME/.config/nvim/snippets" "$backupPath/.config/nvim"

# Files
cp "$HOME/.Xresources" "$backupPath/home"
cp "$HOME/.xinitrc" "$backupPath/home"
cp "$HOME/.gitconfig" "$backupPath/home"
cp "$HOME/.profile" "$backupPath/home"

# Other configs
cp -r "$HOME/.config/zsh" "$backupPath/.config"
cp -r "$HOME/.config/i3" "$backupPath/.config"
cp -r "$HOME/.config/i3blocks" "$backupPath/.config"
cp -r "$HOME/.config/dunst" "$backupPath/.config"
cp -r "$HOME/.config/rofi" "$backupPath/.config"
cp -r "$HOME/.config/fontconfig" "$backupPath/.config"
cp -r "$HOME/.config/picom" "$backupPath/.config"
cp -r "$HOME/.config/sxiv" "$backupPath/.config"
cp -r "$HOME/.config/neofetch" "$backupPath/.config"
cp -r "$HOME/.config/gtk-3.0" "$backupPath/.config"
cp -r "$HOME/.config/redshift" "$backupPath/.config"
cp -r "$HOME/.config/mimeapps.list" "$backupPath/.config"
