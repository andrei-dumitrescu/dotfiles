if [ -z "$variable" ]; then
  echo "variable is unset or set to the empty string"
fi

if [ -n "$variable" ]; then
  echo "variable is set to a non-empty string"
fi

if [ "$variable" ]; then
  echo "variable is set to a non-empty string"
fi
