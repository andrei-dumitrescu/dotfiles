while :; do
  case $1 in
    -e|--is-error)
      icon="$HOME/doomguy-blood.png"
    ;;
    -t|--title)
      if [ "$2" ]; then
        title=$2; shift
      else
        die 'ERROR: "--title" requires a non-empty option argument.'
      fi
    ;;
    --)
      shift
      break
    ;;
    -?*)
      echo "WARN: Unknown option (ignored): $1" >&2
    ;;
    *) 
      break
  esac
  shift
done
