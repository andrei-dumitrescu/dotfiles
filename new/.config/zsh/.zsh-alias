# configs
alias cb="nvim ~/.bashrc"
alias cx="nvim ~/.xinitrc"
alias cs="cd ~/.local && nvim ."
alias cz="cd ~/.config && nvim ~/.config/zsh/.zshrc"
alias ci="cd ~/.config && nvim ~/.config/i3/config"
alias cv="cd ~/.config && nvim ~/.config/nvim/init.vim"

# npm
alias npu="npm run update"
alias nps="npm run setup"
alias npb="npm run build"
alias npl="npm run lint"
alias npt="npm run test"
alias npc="npm run lint && npm run test && npm run typecheck"

# nvm
alias nvlts="nvm ls-remote \
  | grep "Latest LTS" \
  | tail -n 1 \
  | awk '{print $2}' \
  | tr '.' '\n' \
  | head -n 1"

#
alias jcurl='curl --verbose --header "Content-Type: application/json"'
alias ls='ls --color=auto --group-directories-first'
alias lsa='ls -Alh --color=auto --group-directories-first'
alias vi='nvim'
alias vim='nvim'
alias gl='git log --graph --decorate --pretty=oneline --abbrev-commit'

# find in file names
alias rgf="rg --files | rg"
