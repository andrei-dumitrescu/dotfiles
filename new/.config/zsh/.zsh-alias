# configs
alias cs="cd ~/.local && nvim ."
alias cz="cd ~/.config && nvim ~/.config/zsh/.zshrc"
alias cw="cd ~/.config && nvim ~/.config/sway/config"
alias cv="cd ~/.config && nvim ~/.config/nvim/init.vim"

# npm
alias npu="npm run update"
alias nps="npm run setup"
alias npb="npm run build"
alias npl="npm run lint"
alias npt="npm run test"
alias npc="npm run lint && npm run test && npm run typecheck"

# nvm
alias nvlts="nvm ls-remote \
  | grep "Latest LTS" \
  | tail -n 1 \
  | awk '{print $2}' \
  | tr '.' '\n' \
  | head -n 1"

#
alias top="bottom"
alias htop="bottom"
alias ls='exa --color=auto --group-directories-first'
alias lsa='exa -Al --color=auto --group-directories-first'
alias vi='nvim'
alias vim='nvim'

#
alias curl_json='curl --verbose --header "Content-Type: application/json"'
alias curl_no_redirect='curl --verbose --location --max-redirs 0'
alias gl='git log --graph --decorate --pretty=oneline --abbrev-commit'

# find in file names
alias rgf="rg --files | rg"
