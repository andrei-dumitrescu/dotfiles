##
## Syntax highlighting
##

source $ZSH_PLUGIN_HOME/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

##
## Fish like history search feature when pressing UP or DOWN
##

source $ZSH_PLUGIN_HOME/zsh-history-substring-search/zsh-history-substring-search.zsh

bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down

##
## Fish like autosuggestions
##

source $ZSH_PLUGIN_HOME/zsh-autosuggestions/zsh-autosuggestions.zsh

##
## Node Version Manager
##

source $ZSH_PLUGIN_HOME/zsh-nvm/zsh-nvm.plugin.zsh
source $ZSH_PLUGIN_HOME/zsh-better-npm-completion/zsh-better-npm-completion.plugin.zsh

##
## Powerlevel10k prompt 
##

source $ZSH_PLUGIN_HOME/powerlevel10k/powerlevel10k.zsh-theme

# To customize prompt, run `p10k configure` or edit ~/.config/zsh/.zsh-p10k
source $ZSH_CONFIG_HOME/.zsh-p10k
