# swaylock is the equivalent of i3lock in sway
# exec --no-startup-id xss-lock --transfer-sleep-lock -- swaylock --nofork
bindsym $mod+x exec --no-startup-id swaylock --nofork

##
## Xresources colors
##

# sway does not support set_from_resource, so manual setting is required
set $darkblack    #000000
set $black        #000000
set $darkred      #000000
set $red          #000000
set $darkgreen    #000000
set $green        #000000
set $darkyellow   #000000
set $yellow       #000000
set $darkblue     #000000
set $blue         #000000
set $darkmagenta  #000000
set $magenta      #000000
set $darkcyan     #000000
set $cyan         #000000
set $darkwhite    #000000
set $white        #000000
set $transparent  #00000000

# Window decorations
#                       BORDER        BACKGR   TEXT      INDICATOR      CHILD_BORDER
client.focused          $red          $red     $white    $darkmagenta   $white
client.unfocused        $transparent  $blue    $white    $darkblue      $transparent
client.focused_inactive $transparent  $blue    $white    $darkblue      $darkblack
client.urgent           $darkred      $darkred $black    $darkred       $darkred
client.background       $black
