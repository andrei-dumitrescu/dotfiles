#!/usr/bin/env sh

UISWAY_HOME="$(dirname "$0")"

LOG_NAMESPACE=" ui-sway"
LOG_LEVEL=info

# ╭───┤ Expose scripts 
# ╰─

UISWAY_SCRIPTS="$UISWAY_HOME/scripts"
export PATH="$UISWAY_SCRIPTS:$PATH"

fancy-log info -v script_count "$(find "$UISWAY_SCRIPTS" -type f | wc -l)" \
  "Scripts added to \$PATH"
