#!/usr/bin/env sh

export UII3_HOME="$(dirname "$0")"

LOG_NAMESPACE=" ui-i3"
LOG_LEVEL=info

export UII3_TMP="$UII3_HOME/.tmp"
mkdir -p "$UII3_TMP"

# ╭───┤ Expose scripts and libs
# ╰─

scripts_home="$UII3_HOME/scripts"
export PATH="$scripts_home:$PATH"
fancy-log info -v path "$scripts_home" "Scripts exposed in \$PATH"

# ╭───┤ Link user configs 
# ╰─

while IFS="" read -r dir; do
  fake="$HOME/.config/$dir"
  real="$UII3_HOME/config/$dir"
  ensure_symlink "$real" "$fake"
done << EOF
i3
newsboat
picom
polybar
redshift
rofi
sxiv
EOF

ensure_symlink \
  "$UII3_HOME/config/.xinitrc" \
  "$HOME/.xinitrc"

ensure_symlink \
  "$UII3_HOME/config/.Xresources" \
  "$HOME/.Xresources"

