#!/usr/bin/env sh

GITUTILS_HOME="$(dirname "$0")"

LOG_NAMESPACE="󰊢 git"
LOG_LEVEL=info

# ╭───┤ Expose scripts 
# ╰─

scripts_home="$GITUTILS_HOME/scripts"
fancy-log info -v path "$scripts_home" "Scripts exposed in \$PATH"
export PATH="$scripts_home:$PATH"

# ╭───┤ Link user configs 
# ╰─

ensure_symlink \
  "$GITUTILS_HOME/config/.gitconfig" \
  "$HOME/.gitconfig"
